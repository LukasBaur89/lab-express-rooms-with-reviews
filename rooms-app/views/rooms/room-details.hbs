<div class="container">
  <h2>Details of {{name}}</h2>
  <div class="row">
    <div class="col-8">
      <h4>Description: {{description}}</h4>
      <p>imageUrl: {{imageUrl}}</p>
    </div>
    <div class="comment">
      <h2>Leave a comment</h2>
      <form action="/rooms/{{this._id}}/edit" method="post">
        <textarea name="text" id="" cols="50" rows="10"></textarea>
        <p>Review: {{this.reviews}}</p>
        <br />
        <button type="submit" class="btn btn-primary">Send comment</button>
        <button type="submit" class="btn btn-warning">Delete comment</button>
      </form>
    </div>
  </div>

</div>